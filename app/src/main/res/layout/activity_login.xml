<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sarthak.sanuti.Activities.actiivity.LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/vertical_margin"
            android:src="@drawable/icon_large" />


        <com.example.sarthak.sanuti.Activities.customviews.PlainTextView
            android:id="@+id/upsocial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:padding="3dp"
            android:text="#UpSociall"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/large_text" />

        <com.example.sarthak.sanuti.Activities.customviews.PlainTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Connect With Like-Minded People"
            android:textColor="@color/color_text" />
    </LinearLayout>


    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="128dp" />

    <com.example.sarthak.sanuti.Activities.customviews.PlainTextView
        android:id="@+id/disc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/login_button"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:padding="3dp"
        android:text="Disclaimer:We will never post anything on your Facebook,Never."
        android:textColor="@color/color_text" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/disc"
        android:layout_marginTop="18dp"
        app:srcCompat="@drawable/white_wave" />


</RelativeLayout>
