<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userrscroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    android:paddingBottom="10dp"
    android:theme="@style/forfragments">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="match_parent"
            android:layout_height="508dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/icon_large" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc" />

        <include
            layout="@layout/locationresource"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc" />

        <include
            layout="@layout/workresource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc" />

        <include
            layout="@layout/educationresource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc" />

        <include
            layout="@layout/personresource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc" />

        <include
            layout="@layout/genderresource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc" />

        <com.example.sarthak.sanuti.Activities.customviews.PlainTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#Intrest"
            android:textColor="@color/colorPrimary"
            android:textSize="40sp" />

        <com.example.sarthak.sanuti.Activities.customviews.PlainTextView
            android:id="@+id/inuserintrest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#Intrest"
            android:textColor="@color/colorPrimary" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc" />

        <com.example.sarthak.sanuti.Activities.customviews.PlainTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#LIKES"
            android:textColor="@color/colorPrimary"
            android:textSize="40sp" />

        <com.example.sarthak.sanuti.Activities.customviews.PlainTextView
            android:id="@+id/inuserlikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#Intrest"
            android:textColor="@color/colorPrimary" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc" />
    </LinearLayout>


</ScrollView>